  <script>
    async function getDetails() {
      const number = document.getElementById("number").value.trim();
      const resultBox = document.getElementById("result");

      if (!number) {
        resultBox.textContent = "‚ö†Ô∏è Please enter a number.";
        return;
      }

      // Using free proxy to bypass CORS (works on GitHub / Telehost)
      const api = `https://truelookup.hideme.eu.org/?number=${number}&token=fuckyoumodiji`;
      const proxyUrl = `https://api.allorigins.win/get?url=${encodeURIComponent(api)}`;

      resultBox.textContent = "‚è≥ Fetching details...";

      try {
        const response = await fetch(proxyUrl);
        const data = await response.json();

        if (data && data.contents) {
          resultBox.textContent = data.contents;
        } else {
          resultBox.textContent = "‚ùå No data found.";
        }
      } catch (error) {
        resultBox.textContent = "üö´ Error fetching details: " + error.message;
      }
    }
  </script>
